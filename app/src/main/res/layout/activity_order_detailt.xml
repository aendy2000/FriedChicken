            android:id="@+id/food_SumPrice_checkout12"
            android:layout_width="10dp"
            android:layout_height="29dp"
            android:layout_marginTop="2dp"
            android:gravity="top|left"
            android:text=":"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/food_SumPrice_checkout9"
            app:layout_constraintTop_toBottomOf="@+id/food_SumPrice_checkout11" />

        <TextView
            android:id="@+id/food_SumPrice_checkout8"
            android:layout_width="52dp"
            android:layout_height="29dp"
            android:gravity="center|center_horizontal|left"
            android:text="Số ĐT "
            android:textColor="#000000"
            android:textSize="16sp"
